{% extends 'base.html.twig' %}

{% block title %}Профиль{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('resources/lib/datepicker/datepicker.min.css') }}">
{% endblock %}

{% block body %}
    <section class="page-wrapper pt-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile"
                               role="tab" aria-controls="pills-profile" aria-selected="true">
                                <svg class="bi bi-person-circle" width="1em" height="1em" viewBox="0 0 16 16"
                                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
                                    <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                    <path fill-rule="evenodd"
                                          d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
                                </svg>
                                Профиль
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="pills-contest-tab" data-toggle="pill" href="#pills-contest"
                               role="tab"
                               aria-controls="pills-contest" aria-selected="false">
                                {% if user %}
                                    {% if user.competitions.count() != 0 %}
                                        <b style="color: red;">&bull;</b>
                                    {% endif %}
                                {% endif %}
                                <svg class="bi bi-trophy" width="1em" height="1em" viewBox="0 0 16 16"
                                     fill="currentColor"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 1h10c-.495 3.467-.5 10-5 10S3.495 4.467 3 1zm0 15a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1H3zm2-1a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1H5z"/>
                                    <path fill-rule="evenodd"
                                          d="M12.5 3a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-3 2a3 3 0 1 1 6 0 3 3 0 0 1-6 0zm-6-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-3 2a3 3 0 1 1 6 0 3 3 0 0 1-6 0z"/>
                                    <path d="M7 10h2v4H7v-4z"/>
                                    <path d="M10 11c0 .552-.895 1-2 1s-2-.448-2-1 .895-1 2-1 2 .448 2 1z"/>
                                </svg>
                                Подписка
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="pills-application-tab" data-toggle="pill" href="#pills-application"
                               role="tab" aria-controls="pills-application" aria-selected="false">
                                <svg class="bi bi-file-richtext" width="1em" height="1em" viewBox="0 0 16 16"
                                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M4 1h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H4z"/>
                                    <path fill-rule="evenodd"
                                          d="M4.5 11.5A.5.5 0 0 1 5 11h3a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm0-2A.5.5 0 0 1 5 9h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm1.639-3.708l1.33.886 1.854-1.855a.25.25 0 0 1 .289-.047l1.888.974V7.5a.5.5 0 0 1-.5.5H5a.5.5 0 0 1-.5-.5V7s1.54-1.274 1.639-1.208zM6.25 5a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5z"/>
                                </svg>
                                Заявка
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel"
                             aria-labelledby="pills-profile-tab">
                            <!-- was-validated -->
                            <form class="needs-validation" novalidate>
                                <div class="form-group row">
                                    <label for="name" class="col-sm-4 col-form-label">ФИО</label>
                                    <div class="col-sm-8">
                                        <span id="name" style="color: black;">
                                            {% if user %}
                                                {{ user.name }}
                                            {% else %}
                                                Undefined
                                            {% endif %}</span>
                                        <!-- <div class="valid-tooltip">text success</div> -->
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-sm-4 col-form-label">E-mail</label>
                                    <div class="col-sm-8">
                                        <span id="email" style="color: black;">
                                            {% if user %}
                                                {{ user.email }}
                                            {% else %}
                                                Undefined
                                            {% endif %}</span>
                                        {#                                        <input type="email" class="form-control" id="email" required#}
                                        {#                                               {% if user %}value="{{ user.email }}"{% endif %}>#}
                                        <!-- <div class="invalid-tooltip">text-error</div> -->
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12 circle-checkbox-wrapper">
                                        <input class="form-control circle-checkbox" type="checkbox" id="notifications"
                                               {% if user and user.emailSubscribe == true %}checked="checked"{% endif %}>
                                        <label for="notifications" class="col-sm-4 pl-0 circle-checkbox-label">Получать
                                            уведомления на E-mail</label>
                                        <!-- <div class="invalid-tooltip">text-error</div> -->
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <h4 class="col-sm-4 col-form-label">Направления</h4>
                                    <div class="col-sm-8">
                                        <div class="directions-list pt-2">

                                            {% if industries %}
                                                {% for industry in industries %}
                                                    <div class="direction">
                                                        <input type="checkbox" class="custom-checkbox"
                                                               id="d{{ industry.id }}"
                                                               value='{{ industry.id }}'
                                                               {% if industry.id in industries_id %}checked{% endif %}>
                                                        <label for="d{{ industry.id }}">{{ industry.name }}</label>
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    </div>
                                    <!-- <div class="invalid-tooltip">text-error</div> -->
                                </div>
                                <button id="save-profile" class="btn btn-danger" type="button">Сохранить</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="pills-contest" role="tabpanel"
                             aria-labelledby="pills-contest-tab">
                            <div class="col-12 col-md search-results">

                                {% if competitions %}
                                    {% for competition in competitions %}
                                        <div class="card" style="width: 18rem;">
                                            <div class="card-body">
                                                <div class="card-content-wrapper">
                                                    <div class="card-body-top">
                                                        <h6
                                                                {% if competition.id in competitions_id %}
                                                                    style="color: red;"
                                                                {% endif %}
                                                        >
                                                            {% if datetime < competition.deadline %}
                                                                Актуально
                                                            {% else %}
                                                                Архив
                                                            {% endif %}</h6>
                                                    </div>
                                                    <h5 class="card-title"><a
                                                                href="{{ url('get_competition', {'id':competition.id, 'page':1}) }}">
                                                            {{ competition.name }}</a></h5>
                                                </div>
                                                <p class="card-text">Заявки
                                                    до {{ competition.deadline|date("H:i:s d.m.Y") }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% elseif message %}
                                    {#                        {{ message }}#}
                                    Не найдено
                                {% endif %}
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-application" role="tabpanel"
                             aria-labelledby="pills-application-tab">
                            <form class="needs-validation" novalidate>
                                <div class="form-group row">
                                    <label for="name" class="col-sm-4 col-form-label">Имя</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="name" required>
                                        <!-- <div class="valid-tooltip">text success</div> -->
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-sm-4 col-form-label">E-mail</label>
                                    <div class="col-sm-8">
                                        <input type="email" class="form-control" id="email" required>
                                        <!-- <div class="invalid-tooltip">text-error</div> -->
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="url" class="col-sm-4 col-form-label">Ссылка на сайт</label>
                                    <div class="col-sm-8">
                                        <input type="url" class="form-control" id="url" required>
                                        <!-- <div class="invalid-tooltip">text-error</div> -->
                                    </div>
                                </div>
                                {#                                <div class="form-group row">#}
                                {#                                    <label for="direction" class="col-sm-4 col-form-label">Направления</label>#}
                                {#                                    <div class="col-sm-8">#}
                                {#                                        <select class="custom-select" id="direction">#}
                                {#                                            <option selected></option>#}
                                {#                                            <option value="1">Математика, механика, информатика</option>#}
                                {#                                            <option value="2">Физика и науки о космосе</option>#}
                                {#                                            <option value="3">Химия и науки о материалах</option>#}
                                {#                                            <option value="4">Биология и медицинские науки</option>#}
                                {#                                            <option value="5">Науки о Земле</option>#}
                                {#                                            <option value="6">Гуманитарные и социальные науки</option>#}
                                {#                                            <option value="7">Инженерные науки</option>#}
                                {#                                            <option value="8">Сельскохозяйственные науки</option>#}
                                {#                                        </select>#}
                                {#                                    </div>#}
                                {#                                </div>#}
                                <div class="form-group row">
                                    <label for="comment" class="col-sm-4 col-form-label">Комментарий</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" id="comment"></textarea>
                                        <!-- <div class="invalid-tooltip">text-error</div> -->
                                    </div>
                                </div>
                                <button id="save" class="btn btn-success" type="submit">Отправить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('resources/lib/Popper/Popper.js') }}"></script>
    <script src="{{ asset('resources/lib/bootstrap/bootstrap.min.js') }}"></script>
    <script src="{{ asset('resources/lib/jQuery/jquery.ba-throttle-debounce.min.js') }}"></script>
    <script src="{{ asset('resources/js/profile.js') }}"></script>
    {#    <script src="{{ asset('resources/js/script.js') }}"></script>#}
{% endblock %}